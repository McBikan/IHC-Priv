<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <!-- 🟦 Pantalla principal (ISAIA y micrófono) -->
    <ScrollView
            android:id="@+id/vistaPrincipal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fondo_oscuro"
            android:fillViewport="true"
            android:visibility="visible">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="24dp">

            <!-- Botón hamburguesa -->
            <ImageView
                    android:id="@+id/ivMenu"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/menu_burger_white"
                    android:layout_gravity="start"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp" />

            <!-- Bot dentro de círculo blanco -->
            <FrameLayout
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/circle_white">

                <ImageView
                        android:id="@+id/ivBot"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/robot_1"
                        android:layout_gravity="center"
                        android:translationX="-10dp" />
            </FrameLayout>

            <!-- Nombre ISAIA -->
            <TextView
                    android:id="@+id/tvIsaia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ISAIA"
                    android:fontFamily="@font/convergence"
                    android:textSize="60sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="40dp" />

            <!-- Título: CHATBOT DE VOZ -->
            <TextView
                    android:id="@+id/tvTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHATBOT DE\nVOZ"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_marginBottom="20dp" />

            <!-- Texto explicativo -->
            <TextView
                    android:id="@+id/tvDescripcion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USA EL MICRÓFONO\nPARA HABLAR CON ISAIA"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_marginBottom="24dp" />

            <!-- Botón de micrófono con superposición y estado -->
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="32dp">

                <!-- Micrófono + línea cruzada encima -->
                <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp">

                    <ImageButton
                            android:id="@+id/btnMicrofono"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/microfono_circular"
                            android:backgroundTint="@color/fondo_claro"/>
                    <ImageView
                            android:id="@+id/icMuteOverlay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_linea_cruzada"
                            android:visibility="visible"
                            android:layout_gravity="center" />
                </FrameLayout>

                <!-- Texto debajo del micrófono -->
                <TextView
                        android:id="@+id/tvEstadoMicrofono"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="Silenciado"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
            </LinearLayout>


            <!-- Botón Ver Chat -->
            <Button
                    android:id="@+id/btnVerChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver chat"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/fondo_oscuro"
                    android:backgroundTint="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>

    <!-- 🟨 Pantalla de conversación (inicialmente oculta) -->
    <FrameLayout
            android:id="@+id/vistaChat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_dark"
            android:visibility="gone">

        <!-- Scroll de mensajes -->
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="56dp"
                android:fillViewport="true">

        <LinearLayout
                android:id="@+id/contenedorMensajes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp" />
        </ScrollView>

        <!-- Botón volver fijo -->
        <Button
            android:id="@+id/btnVolver"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="12dp"
            android:text="←"
            android:textSize="20sp"
            android:backgroundTint="@color/morado_fuerte"
            android:textColor="@android:color/white"
            android:layout_gravity="top|start"
            android:elevation="4dp"
            android:textStyle="bold" />
    </FrameLayout>

</FrameLayout>